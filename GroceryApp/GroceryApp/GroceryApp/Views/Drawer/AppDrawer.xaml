    <Shell.ItemTemplate>
        <DataTemplate>
            <ContentView NavigationPage.HasNavigationBar="False">
                <Grid HeightRequest="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*" />
                        <ColumnDefinition Width="0.8*" />
                        <ColumnDefinition Width="0.3*" />
                    </Grid.ColumnDefinitions>
                    <Image  Grid.Column="0" Source="{Binding Icon}" WidthRequest="10" HeightRequest="10"
                       Margin="15"/>
                    <Label  Grid.Column="1"
                        FontSize="20"
                       Text="{Binding Title}" TextColor="Black"
                       VerticalTextAlignment="Center" />
                    <Image  Grid.Column="2" Source="goarrow" WidthRequest="10" HeightRequest="10"
                       Margin="18"/>
                </Grid>
            </ContentView>
        </DataTemplate>
    </Shell.ItemTemplate>

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <ContentView HeightRequest="180" BackgroundColor="#FFFFFF">
                <pancake:PancakeView  CornerRadius="0,20,0,20" Margin="0,20,20,10" BackgroundColor="Accent">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <pancake:PancakeView BackgroundColor="LightPink" CornerRadius="90" Margin="20,30,30,30">
                            <Grid BackgroundColor="Transparent" Margin="4">
                                <pancake:PancakeView BackgroundColor="White"  CornerRadius="90" Margin="0" Padding="0">
                                    <Grid BackgroundColor="Transparent" Margin="4">
                                        <pancake:PancakeView BackgroundColor="MediumPurple"  CornerRadius="90" Margin="0" Padding="0">
                                            <Image Source="https://bom.to/dxvYsd" Aspect="AspectFit"/>
                                        </pancake:PancakeView>
                                    </Grid>
                                </pancake:PancakeView>
                            </Grid>

                        </pancake:PancakeView>
                        <StackLayout Grid.Column="1" VerticalOptions="Center" BackgroundColor="Transparent" Margin="-20,0,0,0">
                            <Label Text="Khoa Nguyen" TextColor="White" FontSize="22"  Style="{StaticResource BoldTitleStyle}" />
                            <Label Text="khoanguyen1412v@gmail.com" TextColor="White" Style="{StaticResource LabelTitleStyle}"  FontSize="13"/>
                        </StackLayout>
                    </Grid>
                </pancake:PancakeView>
            </ContentView>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="Red">

        </Grid>
    </Shell.FlyoutHeader>
</sharedTransitions:SharedTransitionShell>